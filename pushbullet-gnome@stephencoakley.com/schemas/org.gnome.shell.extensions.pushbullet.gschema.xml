<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/org/gnome/shell/extensions/pushbullet/" id="org.gnome.shell.extensions.pushbullet">
    <key name="api-key" type="s">
        <default>""</default>
        <summary>Pushbullet API Key</summary>
        <description>Your Pushbullet API key.</description>
    </key>
    <key name="last-checked" type="d">
        <default>0.0</default>
        <summary>Last Checked Timestamp</summary>
        <description>Timestamp of the most recent checked push.</description>
    </key>
    <key name="max-push-count" type="i">
        <default>10</default>
        <summary>Max Push Count</summary>
        <description>The maximum number of new pushes to show at a time.</description>
    </key>
    <key name="check-frequency" type="i">
        <default>30</default>
        <summary>Check Frequency</summary>
        <description>The frequency that Pushbullet should be queried for new pushes in seconds.</description>
    </key>
  </schema>
</schemalist>
